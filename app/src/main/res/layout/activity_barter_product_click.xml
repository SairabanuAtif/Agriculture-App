<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarBarterProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Barter Product"></android.support.v7.widget.Toolbar>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.triocodes.krishikkaran.Activity.BarterProductClickActivity"
        android:background="@color/colorBackground">

        <ListView
            android:id="@+id/list_barter_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           ></ListView>

        <LinearLayout
            android:id="@+id/layout_no_barter_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/text_view_width"
            android:paddingTop="@dimen/text_view_width">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Sorry"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorDarkGreen" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="You haven't added any product for barter"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>

